{
  "apps": {
    "http": {
      "servers": {
        "gateway": {
          "listen": [
            ":9090"
          ],
          "routes": [
            {
              "group": "oauth",
              "match": [
                  {
                      "path": ["/oauth2/"]
                  }
              ],
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "upstreams": [
                    {
                      "dial": "oauth:7777"
                    }
                  ]
                }
              ]
            },
            {
              "group": "protected",
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "upstreams": [
                    {
                      "dial": "protected:8080"
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    }
  }
}
